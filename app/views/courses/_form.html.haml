= simple_form_for @course do |f|
  - if @course.errors.any?
    #errors
      %p
        = "#{pluralize(@course.errors.count, "error")} prohibited this course from being saved:"
      %ul
        - @course.errors.full_messages.each do |msg|
          %li= msg
  .row
    .panel-body.col-sm-4
      = f.input :name, label: "Nombre del curso",  input_html: { class: 'form-control' }
      = f.input :description, label: "Descripción",  input_html: { class: 'form-control' }
      = f.input :order, label: "Número de curso (Orden)",  input_html: { class: 'form-control' }

  = f.button :submit, "Guardar"
