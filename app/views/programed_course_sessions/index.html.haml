.row
  .col-lg-12
    %h3= "Supervisor de curso: #{@programed_course.supervisor.full_name}"
.row
  .col-lg-8
    %h2 Listing programed course sessions
    %table.table
      %thead
        %tr
          %th Session number
          %th Teacher
          %th Topic
          %th Date
          %th
          %th
          %th

      %tbody
      - @programed_course_sessions.each do |programed_course_session|
        %tr
          %td= programed_course_session.session_number
          %td= programed_course_session.teacher.full_name
          %td= programed_course_session.topic
          %td= programed_course_session.date
          %td= link_to 'Edit', edit_programed_course_session_path(programed_course_session)
          %td= link_to 'Destroy', programed_course_session_path(programed_course_session), :method => :delete, :data => { :confirm => 'Are you sure?' }
    %br
    = link_to 'Back', course_programed_courses_path(@programed_course.course_id), class: "btn btn-default"
    = link_to 'New session', new_programed_course_programed_course_session_path, class: "btn btn-default" 
  

  .col-lg-4
    %h2 Students
    %table.table
      %thead
        %tr
          %th Nombre
      
      %tbody
      - @enrollments.each do |enrollment|
        %tr
          %td=link_to enrollment.student.full_name, person_path(enrollment.student.id)

    = render 'enrollment'

